# tonido
FROM ubuntu:16.04
MAINTAINER xiaofd <admin@chit.cf>

RUN sed -i "s#archive.ubuntu.com#cn.archive.ubuntu.com#g" /etc/apt/source.list

RUN apt-get update && \
	apt-get clean  && \
	apt-get install -y wget  --no-install-recommends && \
	apt-get clean && \
	rm -rf /var/lib/apt/lists/*
	
#RUN mkdir /var/run/sshd && \
	echo 'root:root' | chpasswd && \
	sed -ri 's/^PermitRootLogin\s+.*/PermitRootLogin yes/' /etc/ssh/sshd_config && \ 
	sed -ri 's/UsePAM yes/#UsePAM yes/g' /etc/ssh/sshd_config

#EXPOSE 22

RUN sudo mkdir /usr/local/tonido && \
  cd /usr/local/tonido && \
  sudo wget http://www.tonido.com/download.php?tonido64.tar.gz && \
  mv download.php\?tonido64.tar.gz tonido64.tar.gz && \
  tar -zxvf tonido.tar.gz

CMD    ["./tonido.sh start", "-D"]
