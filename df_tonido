# tonido
FROM ubuntu:16.04
MAINTAINER xiaofd <admin@chit.cf>

RUN sed -i "s#archive.ubuntu.com#us.archive.ubuntu.com#g" /etc/apt/sources.list

RUN apt update && \
	apt clean  && \
	apt install -y wget tmux  --no-install-recommends && \
	apt clean && \
	rm -rf /var/lib/apt/lists/*
	
#RUN mkdir /var/run/sshd && \
#	echo 'root:root' | chpasswd && \
#	sed -ri 's/^PermitRootLogin\s+.*/PermitRootLogin yes/' /etc/ssh/sshd_config && \ 
#	sed -ri 's/UsePAM yes/#UsePAM yes/g' /etc/ssh/sshd_config

#EXPOSE 22

RUN mkdir /usr/local/tonido && \
  cd /usr/local/tonido && \
  wget http://www.tonido.com/download.php?tonido64.tar.gz -O tonido.tar.gz && \
  tar -zxvf tonido.tar.gz && \
  ls -al && \
  rm tonido.tar.gz
  
#RUN which tmux

EXPOSE 80
#CMD ["/usr/bin/tmux","new-session","-d","/usr/local/tonido/tonido.sh start"]
